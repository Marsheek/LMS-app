<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@book.image_url) %>
</p>

<p>
  <strong>Author:</strong>
  <%= @book.author %>
</p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @book.description %>
</p>

<p>
  <strong>Book category:</strong>
  <%= @book.book_category %>
</p>

<p>
  <strong>User:</strong>
  <%= @book.user.email %>
</p>
<p>
  <%= rating_for @book, 'rating', disable_after_rate: true %>
</p>
<!-- The render with the instance variable @comments its goin into the books controller show action  -->
<p>
  <%= render @comments %>
</p>

<%= form_for [@book, Comment.new] do |f| %>
  <p>
    <%= f.label :body, "New comment" %><br/>
    <%= f.text_area :body %>
  </p>
  <p><%= f.submit "Add comment" %></p>
<% end %>




<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
