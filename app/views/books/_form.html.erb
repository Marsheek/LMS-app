<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :author %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= rating_for book, 'rating', disable_after_rate: true %>
    <%= f.input :image, as: :file %>
    <%= f.input :book_category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
